// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Tracker {
  id          Int       @id @default(autoincrement())
  name        String
  expiry_days Int       @default(0)
  checkins    Checkin[]
}

model Checkin {
  id           Int      @id @default(autoincrement())
  tracker      Tracker  @relation(fields: [tracker_id], references: [id])
  tracker_id   Int
  checkin_date DateTime @default(now())
}
